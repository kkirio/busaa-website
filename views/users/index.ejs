<section>
	<div class="title">
		<h2>Users Table</h2>
		<h4><a href="/users/new">Create a new user</a></h4>
	</div>
	<table>
		<thead>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>Password</th>
				<th>Role</th>
				<th>Graduation Year</th>
				<th>Major</th>
				<th>Job</th>
				<th>Company</th>
				<th>Location</th>
				<th>Bio</th>
				<th>Interests</th>
				<th>API Token</th>
			</tr>
		</thead>
		<tbody>
			<% users.forEach(user => { %>
				<tr>
					<td><a href="<%= `/users/${user._id}`%>"><%= user.name %></a></td>
					<td><%= user.email %></td>
					<td><%= user.password %></td>
					<td><%= user.role %></td>
					<td><%= user.graduationYear %></td>
					<td><%= user.major %></td>
					<td><%= user.job %></td>
					<td><%= user.company %></td>
					<td><%= user.location %></td>
					<td><%= user.bio %></td>
					<td>
						<ol>
							<% user.interests.forEach(interest => { %>
							<li><%= interest %></li>
							<% }); %>
						</ol>
					</td>
					<td><%= user.apiToken %></td>
					<td>
						<a href="<%=`/users/${user._id}/edit` %>">Edit</a>
					</td>
					<td>
						<a href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
							onclick="return confirm('Are you sure you want to delete this record?')">
							Delete
						</a>
					</td>
				</tr>
			<% }) %>
		</tbody>
	  </table>
</section>
