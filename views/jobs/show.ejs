<section>
	<div class="title">
		<h2>Job Details</h2>
		<h4>
			<a href="/jobs">View all jobs</a>
			<% if (currentUser != null) { %> | 
				<a href="<%=`/jobs/${job._id}/edit`%>">Edit</a> |
				<a href="<%= `/jobs/${job._id}/delete?_method=DELETE` %>" 
					onclick="return confirm('Are you sure you want to delete this record?')">
					Delete
				</a>
			<% } %>
		</h4>
	</div>
	<table class="fit-table">
		<tr>
			<th>Title</th>
			<td><%= job.title %></td>
		</tr>
		<tr>
			<th>Company</th>
			<td><%= job.company %></td>
		</tr>
		<tr>
			<th>Location</th>
			<td><%= job.location %></td>
		</tr>
		<tr>
			<th>Description</th>
			<td><%= job.description %></td>
		</tr>
		<tr>
			<th>Requirements</th>
			<td><%= job.requirements %></td>
		</tr>
		<tr>
			<th>Salary</th>
			<td><%= job.salary %></td>
		</tr>
		<tr>
			<th>Contact Email</th>
			<td><%= job.contactEmail %></td>
		</tr>
		<tr>
			<th>Contact Phone</th>
			<td><%= job.contactPhone %></td>
		</tr>
		<tr>
			<th>Post Date</th>
			<td><%= job.postDate.toDateString() %></td>
		</tr>
		<tr>
			<th>Deadline Date</th>
			<td><%= job.deadlineDate.toDateString() %></td>
		</tr>
		<tr>
			<th>Active?</th>
			<td>
				<% if (job.isActive) { %>
				  Yes
				<% } else { %>
				  No
				<% } %>
			</td>
		</tr>
	</table>
</section>