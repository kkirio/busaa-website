<section>
	<div class="title">
		<h2>Event Details</h2>
		<h4>
			<a href="/events">View all events</a>
			<% if (currentUser != null) { %> |
				<a href="<%=`/events/${event._id}/edit`%>">Edit</a> | 
				<a href="<%=`/events/${event._id}/delete?_method=DELETE`%>" 
					onclick="return confirm('Are you sure you want to delete this event?')">
					Delete
				</a>
			<% } %>
		</h4>
	</div>
	<table class="fit-table">
		<tr>
			<th>Title</th>
			<td><%= event.title %></td>
		</tr>
		<tr>
			<th>Description</th>
			<td><%= event.description %></td>
		</tr>
		<tr>
			<th>Location</th>
			<td><%= event.location %></td>
		</tr>
		<tr>
			<th>Start Date</th>
			<td><%= event.startDate.toDateString() %></td>
		</tr>
		<tr>
			<th>End Date</th>
			<td><%= event.endDate.toDateString() %></td>
		</tr>
		<tr>
			<th>Online?</th>
			<td>
				<% if (event.isOnline) { %>
					Yes
				<% } else { %>
					No
				<% } %>
			</td>
		</tr>
		<tr>
			<th>Registration Link</th>
			<td><a href="<%= event.registrationLink %>"><%= event.registrationLink %></a></td>
		</tr>
		<tr>
			<th>Organizer</th>
			<td>
				<% if (event.organizer) { %>
					<%= event.organizer.name %>
				<% } else { %>
					Deleted
				<% } %>
			</td>			
		</tr>
			<th>Attendees</th>
			<td>
				<ul>
					<% event.attendees.forEach(attendee => { %>
						<% if (attendee) { %>
							<li><%= attendee.name %></li>
						<% } %>
					<% }) %>
				</ul>
			</td>
		</tr>
	</table>
</section>